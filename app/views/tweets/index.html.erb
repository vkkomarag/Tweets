<%= form_tag do %>
<p>Latitude: <%= text_field_tag :lat %>
Longitude: <%= text_field_tag :log %>
<%= submit_tag "Search " %></p>
<% end %>
<table>
<tr>
<th>Username</th>
<th>Message</th>
<th>Latitude</th>
<th>Longitude</th>
<th>Show Map</th></tr>
<% @tweets.each do |t| %>
<tr>
	<td>
		<%= t.user_name %>
	</td>
	<td><%= t.message %></td>
	<td><%= t.latitude %></td>
	<td><%= t.logitude %></td> 
	<td><%= link_to "Show Map", tweets_show_path(t) %></td>
</tr>
<% end %>
</table>
<%= will_paginate @tweets %>

